@model dogcat.Models.Domain.User
@{
    ViewData["Title"] = "수정";
}
<link rel="stylesheet" href="~/css/Mypage/detail.css" />


<br />
<form method="post" class="text-center">
    <input type="hidden" asp-for="Id" />

    <div class="row justify-content-center">
        <div class="col-12 col-sm-6">
            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">이름</span>
                    </div>
                    <input type="text" class="form-control rounded-input narrow-input" asp-for="Name">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">아이디</span>
                    </div>
                    <input type="text" class="form-control rounded-input narrow-input" asp-for="Userid">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">비밀번호</span>
                    </div>
                    <input type="password" class="form-control rounded-input narrow-input" asp-for="Pw">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">닉네임</span>
                    </div>
                    <input type="text" class="form-control rounded-input narrow-input" asp-for="NickName">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">연락처</span>
                    </div>
                    <input type="text" class="form-control rounded-input narrow-input" asp-for="PhoneNum">
                </div>
            </div>

            <div class="form-group">
                <div class="input-group input-group-centered">
                    <div class="input-group-prepend">
                        <span class="input-group-text form-label">이메일</span>
                    </div>
                    <input type="email" class="form-control rounded-input narrow-input" asp-for="Mail">
                </div>
            </div>

            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">수정완료</button>
            </div>
        </div>
    </div>
</form>


