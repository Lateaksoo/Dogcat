    <label for="input_pw2">비밀번호 확인</label>
<input type="password" id="input_pw2" /><br />
    <p id="valid_pw2"></p>
@*닉네임*@
<label for="Nick">NickName</label>
<input type="text" asp-for="NickName" /><br />
    <p id="valid_NickName"></p>
@*이름*@
<label for="Name">이름</label>
<input type="text" asp-for="Name" /> <br />
    <p id="valid_name"></p>
@*메일*@
<label for="mail">메일</label>
<input type="text" asp-for="Mail" /> <br />
    <p id="valid_mail"></p>
<br />
@*연락처*@
<label for="Tel">연락처</label>
<input type="text" asp-for="PhoneNum" /> <button type="button" name="verify_tel">인증번호 받기</button> <br />
    <p id="valid_tel"></p>
<br />
@*인증번호 입력
<label for="verify">인증번호 입력</label>
<input type="text" id="inputcode" />
<br />*@
<button type="submit">가입하기</button>
