@*
    로그인 확인 (있는 아이디인지)
*@
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    int? is_ban = HttpContextAccessor.HttpContext.Session.GetInt32("userBan");
    int? is_user = HttpContextAccessor.HttpContext.Session.GetInt32("userId");

}
@if (is_ban == 1)
{
    <script>
        alert("활동이 정지됐습니다.");
        location.href = "@Url.Action("Login","User")"; // method,controller
    </script>
}
else if  (is_user == null){
    <script>
        alert("ID 또는 패스워드 오류입니다.");
        location.href = "@Url.Action("Login","User")"; // method,controller
    </script>
}
else
{
    <script>
        location.href = "@Url.Action("Index","Home")"; // method,controller
    </script>
}