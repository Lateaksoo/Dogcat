@model dogcat.Controllers.LoginController
@*
    비밀번호 찾기
*@
@{
}
<script src="~/js/User/manage_user.js"></script>
<h1>비밀번호 찾기</h1>
<form method="POST" asp-controller="Login" asp-action="FindPw">
@*이메일 인증여부*@
 <input type="hidden" value="0" name="email_check" id="emailcheck" /> 
 @*아이디*@
<label for="id">ID</label>
<input type="text" name="inputid" placeholder="Id입력" id="input_id" />
<br />
@*이메일*@
<label for="mail">이메일</label>
    <input type="text" name="inputmail" id="input_mail" placeholder="이메일 입력" />
    <button type="button" id="SendMail">이메일 인증</button>
<br />
@*인증번호*@
<label for="verify">인증번호 입력</label>
<input type="text" id="inputverify" placeholder="인증번호6자리" />
<br />
<button id="SendPw">비밀번호 찾기</button><br />
<a href="#">아이디 찾기</a> | <a href="#">회원가입</a>
</form>




