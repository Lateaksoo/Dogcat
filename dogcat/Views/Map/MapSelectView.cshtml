@{
    ViewData["Title"] = "Map Select";
}
    <script src="~/js/Map/MapSelect.js"> </script>
<head>
    <link rel="stylesheet" href="\css\Map\MapSelect.css" />
    <script src="//t1.daumcdn.net/mapjsapi/bundle/postcode/prod/postcode.v2.js"> </script>
</head>

<body>
    <div class="container2">
        <div class="title">
            <h1>주소를 입력하고 지도를 선택하세요</h1>
        </div>

        <div class="address">
            <input type="text" id="address" placeholder="주소를 입력해 주세요" readonly onclick="sample6_execDaumPostcode()">
        </div>

        <div class="MapButton">
            <button id="HMap" onclick="redirectToMapAnimalHospital()" class="btn">
                <img src="https://th.bing.com/th/id/OIG.bQeA88TO6hDwtrp7ihMX?w=270&h=270&c=6&r=0&o=5&pid=ImgGn" alt="HospitalMap">
                <br /><span>동물병원 지도</span>
            </button>
            <div class="line"></div>
            @*줄 그리기*@

            <button id="TMap" onclick="redirectToMapTrail()" class="btn">
                <img src="https://th.bing.com/th/id/OIG.LBm9ONB1VwIsNkS5FdwQ?w=270&h=270&c=6&r=0&o=5&pid=ImgGn" alt="HospitalMap">
                <br /> <span> 산책로 지도</span>
            </button>
        </div>
    </div>
</body>


