
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    int? userId = HttpContextAccessor.HttpContext.Session.GetInt32("userId") ?? 0;
    string userNickName = HttpContextAccessor.HttpContext.Session.GetString("userNickName");
    int? isAdmin = HttpContextAccessor.HttpContext.Session.GetInt32("userAdmin") ?? 0;

}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - dogcat</title>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/dogcat.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/688ac84990.js" crossorigin="anonymous"></script>  <!-- version 6 -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/text.css">
</head>
<body>
    <div id="header">

        <div id="container">
            <div id="icon">
                <img src="/css/avatar2.png" alt="">
            </div>
            <div id="menu">
                <a href="/board/list">게시판</a>
                <a href="/Map/MapSelectView">시설찾기</a>
                <a href="/MyPet/CarculateCalorie">권장칼로리</a>
            </div>
            <div id="login">
                @if (userId == 0 || userId == null)
                {
                    <a href="/User/Login">로그인</a>
                    <a href="/User/Register">회원가입</a>
                }
                else if(isAdmin == 1)
                {
                    <a href="#">회원관리</a>
                    <a href="#">공지사항 작성</a>
                    <a href="/User/Logout">로그아웃</a>
                }

                else
                {
                    <p>@(userNickName)님 환영합니다</p>
                    <a href="/User/Logout">로그아웃</a>
                    <a href="/Mypage/Home/@userId">마이페이지</a>
                }

            </div>
        </div>
        <div class="clear"></div>
        <div id="main">
            <h1>Oh! Dog, Cat</h1>
        </div>
    </div>
    <div class="clear"></div>
    <div id="content">
       @RenderBody()
    </div>

    <div id="footer">
        <div id="f_icon">
            <img src="/css/avatar2.png" alt="">
        </div>
        <div id="text">
            푸터푸터푸터푸터푸터푸터<br>Tel: +82 010 1111 2222 Fax +82 294 4942 8574<br>Mail: gohome99@naver.com
        </div>
        <div id="social">
            <img src="/css/facebook.png" width="33" height="33" alt="Facebook">
            <img src="/css/kakao.png" width="33" height="34" alt="Twitter">
        </div>
    </div>
</body>
</html>